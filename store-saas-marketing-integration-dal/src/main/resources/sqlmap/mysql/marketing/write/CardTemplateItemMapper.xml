<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tuhu.store.saas.marketing.mysql.marketing.write.dao.CardTemplateItemMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.tuhu.store.saas.marketing.dataobject.CardTemplateItem">
        <id column="id" property="id"/>
        <result column="card_template_id" property="cardTemplateId"/>
        <result column="goods_id" property="goodsId"/>
        <result column="PID" property="pid"/>
        <result column="service_item_code" property="serviceItemCode"/>
        <result column="service_item_name" property="serviceItemName"/>
        <result column="business_category" property="businessCategory"/>
        <result column="business_category_code" property="businessCategoryCode"/>
        <result column="business_category_name" property="businessCategoryName"/>
        <result column="labor_hour" property="laborHour"/>
        <result column="measured_quantity" property="measuredQuantity"/>
        <result column="price" property="price"/>
        <result column="face_amount" property="faceAmount"/>
        <result column="discount_amount" property="discountAmount"/>
        <result column="actual_amount" property="actualAmount"/>
        <result column="description" property="description"/>
        <result column="store_id" property="storeId"/>
        <result column="tenant_id" property="tenantId"/>
        <result column="create_user" property="createUser"/>
        <result column="update_user" property="updateUser"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="is_delete" property="isDelete"/>
        <result column="type" property="type"/>
    </resultMap>
    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, card_template_id, goods_id, PID, service_item_code,
         service_item_name,business_category,business_category_code,business_category_name, labor_hour,
          measured_quantity, price, face_amount, discount_amount, actual_amount, description, type,
           store_id, tenant_id, create_user, update_user, create_time, update_time, is_delete
    </sql>

    <insert id="insertCardTemplateItemList" parameterType="java.util.List">
        insert into crd_card_template_item (id, card_template_id, goods_id, PID, service_item_code,service_item_name
        , business_category,business_category_code,business_category_name,labor_hour, measured_quantity, price
        , face_amount, discount_amount, actual_amount, description, store_id, tenant_id, create_user
        , update_user, create_time, update_time,type)
        values
        <foreach collection="list" item="item" index="index" separator=",">
            (
            #{item.id},
            #{item.cardTemplateId},
            #{item.goodsId},
            #{item.pid},
            #{item.serviceItemCode},
            #{item.serviceItemName},
            #{item.businessCategory},
            #{item.businessCategoryCode},
            #{item.businessCategoryName},
            #{item.laborHour},
            #{item.measuredQuantity},
            #{item.price},
            #{item.faceAmount},
            #{item.discountAmount},
            #{item.actualAmount},
            #{item.description},
            #{item.storeId},
            #{item.tenantId},
            #{item.createUser},
            #{item.updateUser},
            #{item.createTime},
            #{item.updateTime},
            #{item.type}
            )
        </foreach>
    </insert>

    <delete id="del">
         delete from  crd_card_template_item where card_template_id = #{id}
    </delete>

    <select id="selectCardTemplateItemList" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from
        crd_card_template_item
        where card_template_id = #{id}
    </select>
</mapper>
