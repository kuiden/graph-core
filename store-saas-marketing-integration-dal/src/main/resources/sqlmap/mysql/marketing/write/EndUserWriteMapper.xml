<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tuhu.store.saas.marketing.mysql.marketing.write.dao.EndUserWriteMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.tuhu.store.saas.marketing.dataobject.EndUser">
        <id column="id" property="id"/>
        <result column="open_id" property="openId"/>
        <result column="customer_type" property="customerType"/>
        <result column="name" property="name"/>
        <result column="phone_number" property="phoneNumber"/>
        <result column="password" property="password"/>
        <result column="head_image" property="headImage"/>
        <result column="nick_name" property="nickName"/>
        <result column="gender" property="gender"/>
        <result column="province" property="province"/>
        <result column="city" property="city"/>
        <result column="country" property="country"/>
        <result column="language" property="language"/>
        <result column="customer_source" property="customerSource"/>
        <result column="remark" property="remark"/>
        <result column="is_delete" property="isDelete"/>
        <result column="create_user" property="createUser"/>
        <result column="update_user" property="updateUser"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>


    <sql id="Base_Column_List">
    id, open_id, customer_type, `name`, phone_number, `password`, head_image, nick_name,
    gender, province, city, country, `language`, customer_source, remark, is_delete,
    create_user, update_user, create_time, update_time
  </sql>


    <select id="findByCustomerId" resultType="com.tuhu.store.saas.marketing.dataobject.EndUser">
        select
        <include refid="Base_Column_List"/>
        from
        end_user WHERE id IN (SELECT end_user_id FROM end_user_customer WHERE customer_id = #{customerId}) ORDER BY
        create_time DESC
    </select>


</mapper>
