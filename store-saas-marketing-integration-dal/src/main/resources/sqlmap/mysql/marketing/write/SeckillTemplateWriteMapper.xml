<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tuhu.store.saas.marketing.mysql.marketing.write.dao.SeckillTemplateMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.tuhu.store.saas.marketing.dataobject.SeckillTemplate">
        <id column="id" property="id" />
        <result column="tenant_id" property="tenantId" />
        <result column="activity_title" property="activityTitle" />
        <result column="pic_url" property="picUrl" />
        <result column="activity_introduce" property="activityIntroduce" />
        <result column="classification_id" property="classificationId" />
        <result column="refence_number" property="refenceNumber" />
        <result column="create_user" property="createUser" />
        <result column="update_user" property="updateUser" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
        <result column="status" property="status" />
        <result column="is_delete" property="isDelete" />
        <result column="sort" property="sort" />
    </resultMap>

    <select id="getClassificaReferNum" resultType="com.tuhu.store.saas.marketing.response.ClassificationReferNum">
        select classification_id as classificationId, count(1) as num
        from seckill_template
        <where>
            <if test="tenantId != null">
                tenant_id = #{tenantId}
            </if>
            <if test="ids != null and ids.size() > 0">
                and classification_id in (
                <foreach collection="ids" index="index" item="item" separator=",">
                    #{item}
                </foreach>
                )
            </if>
            and is_delete = 0
        </where>
        group by classification_id
    </select>
</mapper>
